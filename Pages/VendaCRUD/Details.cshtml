@page "{id:int}"
@model Padaria03.Pages.VendaCRUD.DetailsModel

<h1>Detalhes da Venda</h1>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Venda.Cliente.Nome</dd>

        <dt class="col-sm-2">Produto</dt>
        <dd class="col-sm-10">@Model.Venda.Produto.Nome</dd>

        <dt class="col-sm-2">Quantidade</dt>
        <dd class="col-sm-10">@Model.Venda.Quantidade</dd>

        <dt class="col-sm-2">Valor Total</dt>
        <dd class="col-sm-10">@Model.Venda.ValorTotal</dd>
    </dl>
</div>

<div>
    <a asp-page="Index">Voltar</a>
</div>
